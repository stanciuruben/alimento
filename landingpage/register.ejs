			<form
				action="../auth/local/register"
				method="POST"
				class="form container"
			>
				<% if(messages !== undefined) { %> <% if(messages.length > 0) {
				%>
				<ul class="form__warning_container">
					<% messages.forEach(function(message) { %>
					<li class="form__warning"><%- message %></li>
					<% }); %>
				</ul>
				<% } %> <% } %>
				<fieldset class="form__group">
					<label for="username" class="form__label">Username:</label>
					<input
						required
						type="text"
						name="username"
						id="username"
						class="form__input"
					/>
				</fieldset>
				<fieldset class="form__group">
					<label for="email" class="form__label">E-mail:</label>
					<input
						required
						type="email"
						name="email"
						id="email"
						class="form__input"
					/>
				</fieldset>
				<fieldset class="form__group">
					<label for="password" class="form__label">Password:</label>
					<input
						minlength="6"
						required
						type="password"
						name="password"
						id="password"
						class="form__input"
					/>
				</fieldset>
				<fieldset class="form__group">
					<label for="repeatPassword" class="form__label"
						>Repeat Password:</label
					>
					<input
						minlength="6"
						required
						type="password"
						name="repeatPassword"
						id="repeatPassword"
						class="form__input"
					/>
				</fieldset>
				<fieldset class="form__group--1">
					<p class="form__label--1">
						Allready have an account?
						<a href="./login" class="form__link">Log-in!</a>
					</p>
				</fieldset>
				<fieldset class="form__group--1">
					<p class="form__label--1">
						Or
						<a
							class="form__link"
							href="/alimento/auth/google/federated"
							>Sign in with Google</a
						>
					</p>
				</fieldset>
				<button
					class="btn btn-primary btn-lg form__submit"
					type="submit"
				>
					Register
				</button>
			</form>

